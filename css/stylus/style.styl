/* Global */

html
  height 100%

body
  min-height 100%
  margin 0
  display flex
  flex-direction column
  font 400 14px "Proxima Nova", "Arial", sans-serif

a
  text-decoration none
  color currentColor
  transition all 0.3s

ul
  margin 0
  padding 0
  list-style none

/* Header */

header
  text-align center
  position relative
  display flex
  flex-direction column
  background url(../images/portland-overlay.jpg) no-repeat center -480px fixed #2a2a2a
  background-size cover

  &.hero-container
    flex auto
    background url(../images/portland-overlay.jpg) no-repeat center center fixed #2a2a2a
    background-size cover

    .hero
      flex auto
      display flex
      flex-direction column
      justify-content center
      margin 80px 0

    h1
      width 480px
      margin 24px auto
      font-size 58px

    .sub
      margin 0

  .sub
    margin 0 0 40px
    font-size 16px
    text-transform uppercase
    letter-spacing 2px
    color #fff
    opacity 0.7

  // .nav-collapse
  nav
    padding 24px 0
    border-bottom 1px solid rgba(255,255,255,0.18)
    font-weight 600
    text-transform uppercase
    letter-spacing 1px
    color #fff

    li
      display inline-block
      margin 0 20px
      padding 2px 0
      width auto

      a:hover
        opacity 0.6

    .active
      border-bottom 2px solid color-accent

      a:hover
        opacity 1
        cursor default

  .nav-toggle
    text-indent -9999px
    display block
    width 24px
    height 24px
    background red
    margin 16px

  h1
    margin 40px 0 16px
    font 400 42px/1.1 "Bebas Neue", sans-serif
    text-transform uppercase
    letter-spacing 1px
    color #fff

