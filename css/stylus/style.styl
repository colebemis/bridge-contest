/* Sponsors */

.sponsors
  padding 0 0 24px

  h4
    margin 0 0 20px
    text-transform uppercase
    text-align center
    letter-spacing 2px
    font-size 12px
    color rgba(255,255,255,0.7)

  ul
    display flex
    flex-direction row
    align-items center
    justify-content center


  li
    display inline-block
    width 180px
    padding 0 20px

  a
    opacity 0.5

    &:hover
      opacity 0.7

  img
    width 100%
//    background rgba(255,0,0,0.5)

/* Content */

.content
  max-width 880px
  width 90%
  margin 0 auto
  padding 72px 0

  h2
    font 700 30px/1 "Montserrat", "Arial", sans-serif
    text-transform uppercase
    letter-spacing 1px
    text-align center
    margin 0 0 48px

  h3
    font-size 15px
    font-weight 600
    text-transform uppercase
    letter-spacing 1px
    margin 0
    padding 24px 0 0
    color color-accent
    border-top 2px solid color-accent
    margin-bottom 40px

  .lg-button
    display inline-block
    font 700 15px "Montserrat", sans-serif
    text-transform uppercase
    letter-spacing 1px
    text-align center
    color #fff
    background color-accent
    padding 20px 0
    border-radius 4px
    width 100%
    margin-top 40px

    &:hover
      opacity 0.6

  .lead
    font-size 18px
    color #777
    line-height 1.6
    margin-bottom 36px

  .row::after
    clear both

  .one-third
    width 33.3%
    float left

  .two-thirds
    width 66.7%
    float right

/* Registration */

.content .registration-letter
  box-sizing border-box
  padding 50px 60px
  border 1px solid #e2e2e2
  border-radius 4px
  font-size 16px
  line-height 1.4
  color #333
  box-shadow 0 1px 2px lighten(#000, 90%)

  li
    margin 16px 0

  a
    border-bottom 1px solid #ccc

    &:hover
      color darken(color-accent, 20%)
      border-bottom 1px solid lighten(color-accent, 50%)

/* Schedule */

.content .schedule
  &::after
    content ""
    display block
    clear both

  > div
    box-sizing border-box
    width 50%

  > div:first-of-type
    float left
    padding-right 20px

  > div:last-of-type
    float right
    padding-left 20px

  .event
    font-size 16px
    line-height 1.5
    margin 28px 0

    &::after
      content ""
      display block
      clear both

  .time
    width 23%
    display block
    float left
    color #999

  .description
    width 77%
    display block
    float right
    color #333

  .note
    width 100%
    box-sizing border-box
    line-height 1.5
    padding 15px 20px
    background #f2f2f2
    color #777
    border-radius 4px

/* Hotels */

.content .hotels
  margin-bottom 48px

  li
    border-bottom 1px solid #e2e2e2
    padding 16px 0
    color #777

    &:last-child
      border-bottom none

    a
      color #222
      text-transform uppercase
      letter-spacing 1px
      margin-right 12px

      &:hover
        color darken(color-accent, 20%)

/* Venue */

.content .venue
  box-sizing border-box
  padding-right 40px

  h3
    margin-bottom 30px

  h4
    font-size 18px
    font-weight 400
    line-height 1.5
    margin 0 0 24px

  p
    font-size 16px
    line-height 1.5
    margin 0
    color #777

/* Footer */

footer
  text-align center
  padding 24px 0
  color #777
  line-height 1.6
  border-top 1px solid #e2e2e2

  #index &
    background #0A0A0A
    border-top none
    color #666

    a
      border-bottom: 1px solid darken(#666, 50%)

      &:hover
        color #ccc
        border-bottom 1px solid darken(#ccc, 50%)

    li::after
        color darken(#666, 50%)

  a
    border-bottom: 1px solid lighten(#777, 50%)

    &:hover
      color #222
      border-bottom 1px solid lighten(#222, 50%)

  li
    display inline-block

    &::after
      content "/"
      display inline
      margin 0 10px
      color lighten(#777, 50%)

    &:last-of-type::after
      content ""
      margin 0
